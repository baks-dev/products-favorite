<main class="main container px-4">
    <section id="favorites">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h4 text-uppercase fw-bolder py-2">Избранное</h1>

            {% if share is not null %}
                <button class="btn share-btn border-0" id="shareButton" data-shared="{{ share }}">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-share-fill" viewbox="0 0 16 16">
                        <path d="M11 2.5a2.5 2.5 0 1 1 .603 1.628l-6.718 3.12a2.499 2.499 0 0 1 0 1.504l6.718 3.12a2.5 2.5 0 1 1-.488.876l-6.718-3.12a2.5 2.5 0 1 1 0-3.256l6.718-3.12A2.5 2.5 0 0 1 11 2.5z"></path>
                    </svg>
                </button>
            {% endif %}
        </div>
    </section>

    {% if query %}
        <div class="border rounded-4 container pt-3">
            <table class="table">
                <thead>
                <tr class="small text-muted border-white">
                    <th scope="col">Продукт</th>
                    <th>В наличии</th>
                    <th scope="col">Стоимость</th>
                </tr>
                </thead>
                <tbody>
                {% for card in query %}
                    {{ include(_self|replace({ "content.html.twig": "card.html.twig" })) }}
                {% endfor %}

                </tbody>
            </table>
        </div>
    {% else %}
        <p>Здесь пока ничего нет</p>
    {% endif %}
</main>